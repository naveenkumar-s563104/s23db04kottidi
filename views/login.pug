extends layout
block content
    .container
        h1= title
        h2= message
        br
        form(role='form' action="/login" method="post" style='max-width: 300px;')
            .form-group
                input.form-control(type='text' name="username" placeholder='Enter Username')
                br
            .form-group
                input.form-control(type='password' name="password" placeholder='Password')
                br
            button.btn.btn-success(type='submit'  class="ml-1" id="btn-2") Submit
            a(href='/')
                button.btn.btn-primary(type="button"  class="ml-1" id="btn-3") Cancel